<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.triestpa.cloudcamera">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.RECORD_VIDEO" />

    <uses-feature android:name="android.hardware.camera" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".CloudCameraApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_cloud"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Camera.CameraActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Gallery.GalleryActivity"
            android:label="@string/title_activity_gallery"
            android:parentActivityName=".Camera.CameraActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Camera.CameraActivity" />
        </activity>
        <activity
            android:name=".Gallery.PhotoViewActivity"
            android:label="@string/title_activity_image_view"
            android:parentActivityName=".Gallery.GalleryActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Gallery.GalleryActivity" />
        </activity>
        <activity
            android:name=".Gallery.VideoViewActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Upload.UploadGridActivity"
            android:label="@string/title_activity_upload_status"
            android:parentActivityName=".Camera.CameraActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Camera.CameraActivity" />
            >
        </activity>
        <activity
            android:name=".User.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/LoginTheme.NoActionBar" />
        <activity
            android:name=".User.CreateAccountActivity"
            android:theme="@style/LoginTheme"
            android:label="@string/title_activity_create_account"
            android:parentActivityName=".User.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.triestpa.cloudcamera.User.LoginActivity" />
        </activity>
    </application>

</manifest>
